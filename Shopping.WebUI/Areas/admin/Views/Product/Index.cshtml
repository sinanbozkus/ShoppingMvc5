@using Shopping.DataAccess.Models
@model List<Product>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Product List</h5>
                    <div class="ibox-tools">
                        <a href="/admin/product/add" class="btn btn-primary">
                            New Product
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th class="text-center">Active</th>
                                <th class="text-center">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.Description</td>
                                    <td class="text-center">
                                        @if (item.Active == true)
                                        {
                                            <i class="fa fa-lg fa-check-circle" aria-hidden="true" style="color:darkgreen;"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-lg fa-times-circle" aria-hidden="true" style="color:darkred;"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/product/edit/@item.Id" class="btn btn-xs btn-warning">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
                                        </a>
                                        <a href="/admin/product/delete/@item.Id" class="btn btn-xs btn-danger">
                                            <i class="fa fa-times" aria-hidden="true"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>